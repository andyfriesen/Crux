
data Pair<a, b>(a, b)

// Eq
trait E a {
  e: fun(a, a) -> Boolean
}

impl E Option<a: E> {
  e = fun(lhs, rhs) {
    match Pair(lhs, rhs) {
      Pair(None, None) => True
      Pair(Some(x), Some(y)) => e(x, y)
      _ => False
    }
  }
}

impl E Number {
  e = fun(x, y) { x == y }
}

