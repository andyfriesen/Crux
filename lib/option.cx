pragma { NoBuiltin }

import {
  boolean(...)
  cmp(...)
}

export data Option<a> {
  Some(a),
  None,
}

// TODO: tuples (or move pair into its own file)
data Pair<a, b>(a, b)

impl Eq Option<a: Eq> {
  eq = fun(lhs, rhs) {
    match Pair(lhs, rhs) {
      Pair(None, None) => True
      Pair(Some(x), Some(y)) => x == y
      _ => False
    }
  }
}
